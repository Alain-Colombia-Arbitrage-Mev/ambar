---
interface ContactMethod {
  icon: string;
  title: string;
  value: string;
  subtitle: string;
  href: string;
  hoverColor: string;
}

const contactMethods: ContactMethod[] = [
  { icon: 'phone', title: 'Llámanos', value: '+57 300 XXX XXXX', subtitle: 'Lun - Vie: 8am - 6pm', href: 'tel:+57300XXXXXXX', hoverColor: 'hover:border-amber-500/50' },
  { icon: 'whatsapp', title: 'WhatsApp', value: 'Respuesta inmediata', subtitle: 'Atención 24/7', href: 'https://wa.me/57300XXXXXXX', hoverColor: 'hover:border-green-500/50' },
  { icon: 'mail', title: 'Email', value: 'contacto@studioambar.com', subtitle: 'Asuntos administrativos', href: 'mailto:contacto@studioambar.com', hoverColor: 'hover:border-blue-500/50' }
];

const icons: Record<string, string> = {
  phone: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />`,
  whatsapp: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />`,
  mail: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`
};
---

<section id="contacto" class="py-16 sm:py-20 md:py-24 relative">
  <div class="container">
    <!-- Contact Methods Grid -->
    <div data-animate class="grid sm:grid-cols-2 md:grid-cols-3 gap-3 sm:gap-4 md:gap-6 mb-12 sm:mb-16 md:mb-20 px-4 lg:px-0">
      {contactMethods.map((method) => (
        <a 
          href={method.href}
          class={`group p-5 sm:p-6 rounded-xl sm:rounded-2xl bg-white/[0.02] backdrop-blur-xl border border-white/10 transition-all duration-300 ${method.hoverColor} hover:bg-white/[0.05] active:scale-[0.98]`}
          style="box-shadow: 0 4px 24px rgba(0,0,0,0.2), inset 0 1px 0 rgba(255,255,255,0.04);"
        >
          <div class="w-11 h-11 sm:w-12 sm:h-12 md:w-14 md:h-14 rounded-lg sm:rounded-xl bg-white/5 border border-white/10 flex items-center justify-center text-white mb-4 sm:mb-5 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <Fragment set:html={icons[method.icon]} />
            </svg>
          </div>
          <h3 class="text-white font-semibold mb-1 text-sm sm:text-base font-display">{method.title}</h3>
          <p class="text-xs sm:text-sm text-neutral-300 mb-1">{method.value}</p>
          <p class="text-[10px] sm:text-xs text-neutral-500">{method.subtitle}</p>
        </a>
      ))}
    </div>

    <!-- Main Contact Section -->
    <div class="grid lg:grid-cols-12 gap-8 sm:gap-10 lg:gap-12 items-start px-4 lg:px-0">
      <!-- Left Column: Info -->
      <div data-animate class="lg:col-span-5">
        <span class="text-[10px] sm:text-xs uppercase tracking-widest text-amber-500 font-semibold mb-3 sm:mb-4 block">
          Únete a Nosotros
        </span>
        <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-white tracking-tight mb-4 sm:mb-6 font-display">
          Empieza tu Carrera
          <span class="text-neutral-500 block mt-1">Webcam en Soacha Hoy</span>
        </h2>
        <p class="text-sm sm:text-base text-neutral-400 leading-relaxed mb-6 sm:mb-8">
          Completa el formulario. No pedimos experiencia ni fotos comprometedoras. 
          Solo necesitamos tus ganas de aprender.
        </p>

        <!-- Requirements Box with Glass Effect -->
        <div class="p-4 sm:p-5 md:p-6 rounded-xl sm:rounded-2xl bg-amber-500/5 backdrop-blur-xl border border-amber-500/20 mb-6 sm:mb-8" style="box-shadow: 0 4px 24px rgba(245,158,11,0.08), inset 0 1px 0 rgba(245,158,11,0.1);">
          <div class="flex gap-3 sm:gap-4">
            <div class="flex-shrink-0">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h4 class="text-white font-semibold mb-2 text-sm sm:text-base font-display">Requisitos para Aplicar</h4>
              <ul class="space-y-1.5 sm:space-y-2 text-xs sm:text-sm text-neutral-400">
                <li class="flex items-center gap-2">
                  <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Mayor de 18 años
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Cédula colombiana o PEP válido
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Ganas de aprender y crecer
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Location Info -->
        <div class="flex items-start gap-3 sm:gap-4 text-xs sm:text-sm text-neutral-500">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 text-neutral-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <div>
            <p class="text-white font-medium">Centro de Soacha, Cundinamarca</p>
            <p class="text-xs text-amber-500 mt-1">Dirección exacta privada por seguridad</p>
            <p>Soacha, Cundinamarca</p>
          </div>
        </div>
      </div>

      <!-- Right Column: Form -->
      <div data-animate class="lg:col-span-7">
        <form 
          class="p-5 sm:p-6 md:p-8 rounded-2xl sm:rounded-3xl bg-white/[0.03] backdrop-blur-2xl border border-white/10"
          id="contact-form"
          style="box-shadow: 0 16px 48px rgba(0,0,0,0.4), inset 0 1px 0 rgba(255,255,255,0.06), inset 0 -1px 0 rgba(255,255,255,0.02);"
        >
          <div class="grid sm:grid-cols-2 gap-4 sm:gap-5 md:gap-6 mb-4 sm:mb-5 md:mb-6">
            <div class="space-y-1.5 sm:space-y-2">
              <label for="nombre" class="text-[10px] sm:text-xs font-semibold text-neutral-500 uppercase tracking-wide">
                Nombre Completo *
              </label>
              <input 
                type="text" 
                id="nombre"
                name="nombre"
                required
                class="w-full bg-neutral-800 border border-neutral-700 focus:border-amber-500 text-white rounded-lg sm:rounded-xl px-3 sm:px-4 py-3 sm:py-3.5 text-sm outline-none transition-colors duration-300 placeholder:text-neutral-600"
                placeholder="Tu nombre"
              />
            </div>
            <div class="space-y-1.5 sm:space-y-2">
              <label for="telefono" class="text-[10px] sm:text-xs font-semibold text-neutral-500 uppercase tracking-wide">
                WhatsApp / Teléfono *
              </label>
              <input 
                type="tel" 
                id="telefono"
                name="telefono"
                required
                class="w-full bg-neutral-800 border border-neutral-700 focus:border-amber-500 text-white rounded-lg sm:rounded-xl px-3 sm:px-4 py-3 sm:py-3.5 text-sm outline-none transition-colors duration-300 placeholder:text-neutral-600"
                placeholder="300 123 4567"
              />
            </div>
          </div>

          <div class="space-y-1.5 sm:space-y-2 mb-4 sm:mb-5 md:mb-6">
            <label class="text-[10px] sm:text-xs font-semibold text-neutral-500 uppercase tracking-wide">
              ¿Tienes experiencia en modelaje webcam?
            </label>
            <div class="grid grid-cols-2 gap-3 sm:gap-4">
              <label class="cursor-pointer">
                <input type="radio" name="experiencia" value="no" class="peer sr-only" checked />
                <div class="text-center py-3 sm:py-3.5 rounded-lg sm:rounded-xl border border-neutral-700 bg-neutral-800 text-neutral-400 peer-checked:bg-amber-500 peer-checked:text-black peer-checked:border-amber-500 peer-checked:font-semibold transition-all duration-300 text-xs sm:text-sm active:scale-[0.98]">
                  No, soy nueva
                </div>
              </label>
              <label class="cursor-pointer">
                <input type="radio" name="experiencia" value="si" class="peer sr-only" />
                <div class="text-center py-3 sm:py-3.5 rounded-lg sm:rounded-xl border border-neutral-700 bg-neutral-800 text-neutral-400 peer-checked:bg-amber-500 peer-checked:text-black peer-checked:border-amber-500 peer-checked:font-semibold transition-all duration-300 text-xs sm:text-sm active:scale-[0.98]">
                  Sí, tengo experiencia
                </div>
              </label>
            </div>
          </div>

          <div class="space-y-1.5 sm:space-y-2 mb-4 sm:mb-5 md:mb-6">
            <label for="horario" class="text-[10px] sm:text-xs font-semibold text-neutral-500 uppercase tracking-wide">
              Horario de preferencia
            </label>
            <select 
              id="horario"
              name="horario"
              class="w-full bg-neutral-800 border border-neutral-700 focus:border-amber-500 text-neutral-300 rounded-lg sm:rounded-xl px-3 sm:px-4 py-3 sm:py-3.5 text-sm outline-none transition-colors duration-300 appearance-none cursor-pointer"
            >
              <option value="flexible">Horario flexible</option>
              <option value="manana">Mañana (6am - 2pm)</option>
              <option value="tarde">Tarde (2pm - 10pm)</option>
              <option value="noche">Noche (10pm - 6am)</option>
            </select>
          </div>

          <div class="space-y-1.5 sm:space-y-2 mb-6 sm:mb-8">
            <label for="mensaje" class="text-[10px] sm:text-xs font-semibold text-neutral-500 uppercase tracking-wide">
              Mensaje (Opcional)
            </label>
            <textarea 
              id="mensaje"
              name="mensaje"
              rows="3"
              class="w-full bg-neutral-800 border border-neutral-700 focus:border-amber-500 text-white rounded-lg sm:rounded-xl px-3 sm:px-4 py-3 sm:py-3.5 text-sm outline-none transition-colors duration-300 resize-none placeholder:text-neutral-600"
              placeholder="Cuéntanos tus dudas o expectativas..."
            ></textarea>
          </div>

          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-amber-500 to-amber-600 text-black font-bold py-3.5 sm:py-4 rounded-lg sm:rounded-xl hover:from-amber-400 hover:to-amber-500 transition-all duration-300 flex items-center justify-center gap-2 shadow-[0_0_30px_rgba(245,158,11,0.3)] hover:shadow-[0_0_40px_rgba(245,158,11,0.4)] active:scale-[0.98] text-sm sm:text-base"
          >
            <span>Enviar Solicitud de Postulación</span>
            <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </button>

          <p class="text-[10px] sm:text-xs text-neutral-500 text-center mt-3 sm:mt-4">
            Al enviar aceptas nuestra <a href="/privacidad" class="text-amber-500 hover:underline">Política de Privacidad</a> y 
            <a href="/terminos" class="text-amber-500 hover:underline">Términos y Condiciones</a>. 
            Te contactaremos en menos de 2 horas.
          </p>
        </form>

        <!-- Quick Links under form -->
        <div class="mt-6 pt-6 border-t border-white/10 flex flex-wrap justify-center gap-3 text-xs text-neutral-500">
          <a href="/privacidad" class="hover:text-amber-500 transition-colors">Privacidad</a>
          <span>•</span>
          <a href="/terminos" class="hover:text-amber-500 transition-colors">Términos</a>
          <span>•</span>
          <a href="/datos" class="hover:text-amber-500 transition-colors">Tratamiento de Datos</a>
        </div>
      </div>
    </div>
  </div>
</section>
